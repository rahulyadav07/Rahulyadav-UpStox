<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/portfolioSummaryCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <!-- Portfolio Summary Labels -->
        <TextView
            android:id="@+id/textCurrentValueLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current value*"
            android:textColor="@color/gray"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textCurrentValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="₹ 0.00"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@id/textCurrentValueLabel"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textTotalInvestmentLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Total investment*"
            android:textColor="@color/gray"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textCurrentValueLabel" />

        <TextView
            android:id="@+id/textTotalInvestment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹ 0.00"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@id/textTotalInvestmentLabel"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Today's P&L -->
        <TextView
            android:id="@+id/textTodaysPnLLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Today's Profit &amp; Loss*"
            android:textColor="@color/gray"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textTotalInvestmentLabel" />

        <TextView
            android:id="@+id/textTodaysPnL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-₹ 0.00"
            android:textColor="@color/red"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@id/textTodaysPnLLabel"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Individual Item Details (Hidden by default) -->
        <TextView
            android:id="@+id/textItemSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symbol"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textItemLtpLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LTP:"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textItemSymbol" />

        <TextView
            android:id="@+id/textItemLtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹ 0.00"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBaseline_toBaselineOf="@id/textItemLtpLabel"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textItemQuantityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Quantity:"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textItemLtpLabel" />

        <TextView
            android:id="@+id/textItemQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBaseline_toBaselineOf="@id/textItemQuantityLabel"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textItemAvgPriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Avg Price:"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textItemQuantityLabel" />

        <TextView
            android:id="@+id/textItemAvgPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹ 0.00"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBaseline_toBaselineOf="@id/textItemAvgPriceLabel"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textItemPnLLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="P&amp;L:"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textItemAvgPriceLabel" />

        <TextView
            android:id="@+id/textItemPnL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹ 0.00"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBaseline_toBaselineOf="@id/textItemPnLLabel"
            app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/summaryDivider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@color/light_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textTodaysPnLLabel" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/textTotalPnLLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Profit &amp; Loss*"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_container" />


        <TextView
            android:id="@+id/textTotalPnL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-₹ 0.00 (0.00%)"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/textTotalPnLLabel"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
