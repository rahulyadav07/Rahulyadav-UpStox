<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground">


    <TextView
        android:id="@+id/textSymbol"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textLtpLabel"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ASHOKLEY" />

    <!-- LTP Label and Value - Top Right -->
    <TextView
        android:id="@+id/textLtpLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LTP: "
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/textLtp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textLtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:text="₹ 119.10" />


    <TextView
        android:id="@+id/textNetQtyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textColor="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/textSymbol"
        app:layout_constraintStart_toStartOf="@+id/textSymbol"
        android:text="NET QTY: "
        />

    <!-- P&L Label and Value - Bottom Right -->

    <TextView
        android:id="@+id/textQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"

        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textNetQtyLabel"
        app:layout_constraintStart_toEndOf="@+id/textNetQtyLabel"
        app:layout_constraintTop_toTopOf="@+id/textNetQtyLabel"
        app:layout_constraintVertical_bias="0.0"
        tools:text="3" />

    <TextView
        android:id="@+id/textPnLLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P&amp;L: "
        android:textColor="@color/gray"
        android:textSize="12sp"

        app:layout_constraintBottom_toBottomOf="@+id/textPnL"
        app:layout_constraintEnd_toStartOf="@+id/textPnL"
        app:layout_constraintTop_toTopOf="@+id/textPnL" />

    <TextView
        android:id="@+id/textPnL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textLtp"
        android:layout_marginTop="12dp"
        tools:text="₹ 12.90" />

    <!-- Divider Line at Bottom -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@+id/textQuantity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>